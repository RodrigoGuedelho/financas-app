{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h3>Nova Conta</h3>
<div class="card">
    <div class="card-body">
        <form action="" method="POST">
            <label for="nome">Nome:</label>
            <Input type="text" id="nome" name="nome" placeholder="Nome da categoria" class="form-control" required>
            <label for="email">Email:</label>
            <Input type="email" id="email" name="email" placeholder="Email" class="form-control" required>
            <label for="senha">Senha:</label>
            <Input type="password" id="senha" name="senha" placeholder="Senha" class="form-control" required>
            <label for="senha2">Repita sua senha:</label>
            <Input type="password" id="senha2" name="senha2" placeholder="Senha2" class="form-control" required>
            
            <button type="submit" class="btn btn-success mt-2">Criar Conta</button>
        </form>
    </div>
</div>